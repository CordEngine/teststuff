{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "bun",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"name": "Debug Program",
			"program": "${workspaceFolder}/index.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "${env:NODE_ENV:-development}"
			},
			"stopOnEntry": false,
			"watchMode": true
		},
		{
			"type": "bun",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"name": "Run Program",
			"program": "${workspaceFolder}/index.ts",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "${env:NODE_ENV:-development}"
			},
			"noDebug": true,
			"watchMode": true
		},
		{
			"type": "bun",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"name": "Debug File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "${env:NODE_ENV:-development}"
			},
			"stopOnEntry": false,
			"watchMode": true
		},
		{
			"type": "bun",
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"name": "Run File",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "${env:NODE_ENV:-development}"
			},
			"noDebug": true,
			"watchMode": true
		}
	]
}
